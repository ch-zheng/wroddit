<!DOCTYPE html>
{{!-- View wroddit post comments --}}
{{#> wroddit_layout}}
{{#*inline "content-block"}}
	{{> wroddit_post post}}
	<p id="content">{{post.content}}<p>
	<section id="commentsection">
		<h1>comments</h1>
		<hr>
		<form id="submit-comment" action="/w/frankenstein/comments/{{post.id}}/submit" method="post">
                    <textarea name="comment" form="submit-comment" rows=4></textarea>
                    <input name="username" type="text" placeholder="user">
                    <input type="submit" value="save">
		</form>
		{{#each comments}}
			<div id="{{id}}" class="comment">
				<h2>{{author}}</h2>
				<p>{{points}} points</p>
				<p class="comment-content">{{content}}</p>
				<a href="#" onclick="toggle_visibility('replyto-{{id}}');">reply</a>
				<form id="replyto-{{id}}" method="post">
					<textarea name="reply" form="replyto-{{id}}" rows=2></textarea>
					<input type="submit" value="submit">
				</form>
			</div>
		{{/each}}
	</section>
	<script type="text/javascript">
		function toggle_visibility(id) {
			let e = document.getElementById(id);
			if (e.style.display == 'block') e.style.display = 'none';
			else e.style.display = 'block';
		}
	</script>
{{/inline}}
{{/wroddit_layout}}
